<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  Color Palette  -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="SecondaryColor">#FF4081</Color>
    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#212121</Color>
    <Color x:Key="MutedTextColor">#757575</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />

    <!--  Typography  -->
    <FontFamily x:Key="MainFont">Segoe UI, Roboto, sans-serif</FontFamily>
    <sys:Double x:Key="HeaderFontSize">24</sys:Double>
    <sys:Double x:Key="SubHeaderFontSize">18</sys:Double>
    <sys:Double x:Key="BodyFontSize">14</sys:Double>

    <!--  Spacing  -->
    <Thickness x:Key="MainPadding">16</Thickness>
    <Thickness x:Key="ItemMargin">0,0,0,8</Thickness>

</ResourceDictionary>
