<Window x:Class="AppUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ext="clr-namespace:AppUI.Extensions"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}" FontSize="24" Margin="0,0,0,20"/>
            
            <TextBlock Text="{ext:Loc WelcomeMessage}" FontSize="18" Foreground="{StaticResource MutedTextBrush}" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,20">
                <Button Content="English" Command="{Binding SwitchToEnglishCommand}" Width="100" Margin="0,0,10,0"/>
                <Button Content="Deutsch" Command="{Binding SwitchToGermanCommand}" Width="100" Margin="0,0,10,0"/>
                <Button Content="About" Command="{Binding ShowAboutCommand}" Width="100"/>
            </StackPanel>

            <Button Content="Load Samples" Command="{Binding LoadDataCommand}" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left" Width="150" Margin="0,20"/>
            
            <ProgressBar IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Height="4" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
